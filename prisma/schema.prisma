generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  userId       Int      @unique
  email        String   @unique
  name         String?
  avatar       String?
  status       String   @default("active")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  googlefa     Boolean  @default(false)
  // wallets      Wallet[]
  transactions Transaction[]
  kyc          KYC?
  notifications Notification[]
  settings     Settings?

  googlefaConfig UserGoogleFA?

  chat chat[]

  userWallet userWallet[]
  assignments AdminUserAssignment[]
  feedback     Feedback[]
  withdrawRequests WithdrawRequest[]
}

model userWallet {
  id       String   @id @default(uuid())
  userId   String   @unique
  user     User     @relation(fields: [userId], references: [id])
  BTC      String   @default("0")
  ETH      String   @default("0")
  USDT     String   @default("0")
  USDC     String   @default("0")
  BNB      String   @default("0")
  DAI      String   @default("0")
  MATIC    String   @default("0")
  XRP      String   @default("0")
  SOL      String   @default("0")
  ADA      String   @default("0")
  DOGE     String   @default("0")
  DOT      String   @default("0")
  SHIB     String   @default("0")
  TRX      String   @default("0")
  LTC      String   @default("0")
  AVAX     String   @default("0")
  WBTC     String   @default("0")
  LINK     String   @default("0")
  UNI      String   @default("0")
  BCH      String   @default("0")
  XLM      String   @default("0")
  VET      String   @default("0")
  THETA    String   @default("0")
  FIL      String   @default("0")
  ICP      String   @default("0")
  AAVE     String   @default("0")
  EOS      String   @default("0")
  XMR      String   @default("0")
  ZEC      String   @default("0")
  ALGO     String   @default("0")
  ATOM     String   @default("0")
  MKR      String   @default("0")
  NEO      String   @default("0")
  KSM      String   @default("0")
  FTM      String   @default("0")
  EGLD     String   @default("0")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Feedback {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  message   String
  type      String   @default("general")
  status    String   @default("new")
  createdAt DateTime @default(now())
}

model WithdrawRequest {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  coin      String
  amount    Float
  address   String   @default("")
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Wallet {
  id        String   @id @default(uuid())
  // user      User     @relation(fields: [userId], references: [id])
  // userId    String
  coinId    String
  balance   Float    @default(0)
  profits   Float    @default(0)
  frozen    Float    @default(0)
  symbol    String   @unique
  name      String
  logo      String?
  address   String
  actualBalance String
  privateKey String?
  publicKey String
  network   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Transaction Transaction[]
}

model Transaction {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  wallet      Wallet   @relation(fields: [walletId], references: [id])
  walletId    String
  type        String   // deposit, withdraw, transfer, convert
  amount      Float
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  toAddress   String?
  txHash      String?
}

model KYC {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique

  firstName    String
  lastName     String
  Brithdate    String   @default("")   // was required, make safe default
  Place        String   @default("")   // was required, make safe default
  Email        String
  status       String   @default("pending")
  submittedAt  DateTime @default(now())
  verifiedAt   DateTime?

  // New optional fields to match UI
  country            String?
  certificateType    String?
  certificateNumber  String?
  phone              String?

  // Stored file paths (served from /public)
  idFrontPath  String?
  idBackPath   String?
  handHeldPath String?

  metadata     Json?
}



model Notification {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Settings {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
  language     String   @default("en")
  emailUpdates Boolean  @default(true)
  twoFAEnabled Boolean  @default(false)
  notification Boolean  @default(true)
  cacheCleaned Boolean  @default(false)
}

model chat {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  message   String
  who  String @default("user")
  type      String   @default("text")
  createdAt DateTime @default(now())
  admin      Admin?   @relation(fields: [adminId], references: [id])
  adminId    String?
}

enum AdminRole {
  ADMIN
  SUPERADMIN
}

model Admin {
  id                String     @id @default(uuid())
  adminId           Int        @unique
  email             String     @unique
  hashedPassword    String
  name              String?
  role              AdminRole  @default(ADMIN)
  status            String     @default("active")
  lastLoginAt       DateTime?
  twoFactorSecret   String?
  resetToken        String?
  resetTokenExpires DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  assignments       AdminUserAssignment[]
  chats             chat[]
}

// Relation table assigning users to admins (many users per admin, a user can have many admins? We restrict to one active assignment per user via unique index)
model AdminUserAssignment {
  id         String   @id @default(uuid())
  admin      Admin    @relation(fields: [adminId], references: [id])
  adminId    String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
  active     Boolean  @default(true)

  @@unique([userId, active], name: "one_active_assignment_per_user")
  @@index([adminId])
  @@index([userId])
}

// Global feature flags controlled by admins
model FeatureFlag {
  id         String   @id @default(uuid())
  key        String   @unique
  enabled    Boolean  @default(false)
  updatedAt  DateTime @updatedAt
  updatedBy  String?  // Admin ID who last changed it
}

model UserGoogleFA {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  secret     String
  verified   Boolean  @default(false)
  verifiedAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
